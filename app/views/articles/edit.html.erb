<h1>Edit your article</h1>

<% if @article.errors.any? %>
	<ul>	
	<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @article do |f| %>
<p>
	<%= f.label :title %><br/>
	<%= f.text_field :title %>
</p>
<br/>
<p>
	<%= f.label :description %><br/>
	<%= f.text_area :description %>
</p>
<br/>
<p>
	<%= f.submit %>
</p>
<%= link_to 'Back to Articles Index', articles_path %>
<% end %>